<script src="https://js.stripe.com/v3/"></script>
<h1>Checkout</h1>
<p>Required fields are followed by <strong><span aria-label="required">*</span></strong>&period;</p>
<section class="flexy container">
    <!--
    Disable submit buttons once they've been tapped or clicked.
    Validate data during entryâ€”not just on form submission.
    Make guest checkout the default and make account creation simple once checkout is complete.
    
    -->
    <form action="/api/money/create-checkout-resource" method="post" enctype="application/x-www-form-urlencoded">
        <fieldset>
            <legend>Billing address</legend>
            <label for="myName">Name<input type="text" id="myName" name="name" required="true" placeholder="John M. Doe" autocomplete="name" /></label>
            <label for="myEmail">Email address<input type="email" name="email" required="true" id="myEmail" placeholder="john@example.com" autocomplete="email" /></label>
            <label for="myAddress">Address<textarea type="text" name="address" required="true" id="myAddress" placeholder="542 W. 15th Street" autocomplete="billing address-line-1"></textarea></label>
            <label for="myPostcode">ZIP or postal code (optional)<input type="text" name="postcode" id="myPostcode" placeholder="E5 8DJ" autocomplete="postal-code" /></label>
            <label for="myCountry"><span>Country or region</span><select id="myCountry" name="country" required="true">
                <option value="PS">Palestine</option>
                <option value="UK" selected="selected">United Kingdom</option>
                <option value="JO">Jordan</option>
            </select></label>
            <label for="myTelephone"><span>Telephone</span><input type="tel" name="telephone" id="myTelephone" placeholder="07930120661" autocomplete="tel" /></label>
        </fieldset>
        <fieldset>
            <legend>Payment information</legend>
            <label for="myCard"><span>Card type</span><select id="myCard" name="usercard" required="true">
                <option value="visa">Visa</option>
                <option value="mc">Mastercard</option>
                <option value="amex">American Express</option>
            </select></label>
            <label for="myCardname"><span>Name on card</span><strong><span aria-label="required">*</span></strong><input type="text" id="myCardname" name="cardname" required="true" placeholder="John More Doe" autocomplete="cc-name" pattern="[\p{L} \-\.]+" /></label>
            <label for="myCardno"><span>Card number</span><strong><span aria-label="required">*</span></strong><input type="text" id="myCardno" name="cardnumber" required="true" placeholder="1111-2222-3333-4444" autocomplete="cc-number" inputmode="numeric" pattern="[\d ]{10,30}" /></label>
            <label for="myExpiry">Expiry date<input type="text" id="myExpiry" name="expdate" autocomplete="cc-exp" required="true" placeholder="MM/YY" pattern="^(0[1-9]|1[0-2])\/([0-9]{2})$" maxlength="5" /></label>
            <label for="cvv">Security code<input type="text" id="cvv" name="cvv" required="true" placeholder="352" inputmode="numeric" minlength="3" maxlength="4" /><span class="tips">Back of card, last 3 digits</span></label>                    
        </fieldset>
        <fieldset>
            <legend>Shipping address</legend>
            <label><input type="checkbox" checked="checked" name="sameadr">Shipping address same as billing</label>
            <label for="myAddress">Address<textarea type="text" name="address" id="myAddress" placeholder="542 W. 15th Street" autocomplete="shipping address-line-1"></textarea></label>
        </fieldset>
        <input type="submit" value="Complete payment" />
        <small>NB: data entered in this form is not stored or shared.</small>
    </form>
</section>
<section class="flexy container">
    <h4>Cart
        <span class="price" style="color:black">
            <i class="fa fa-shopping-cart"></i>
            <b>4</b>
        </span>
    </h4>
    <p><a href="#">Product 1</a> <span class="price">$15</span></p>
    <p><a href="#">Product 2</a> <span class="price">$5</span></p>
    <p><a href="#">Product 3</a> <span class="price">$8</span></p>
    <p><a href="#">Product 4</a> <span class="price">$2</span></p>
    <hr>
    <p>Total <span class="price" style="color:black"><b>$30</b></span></p>
</section>